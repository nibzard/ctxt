# Environment Variables Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://ctxt_user:ctxt_password@localhost:5432/ctxt_help
REDIS_URL=redis://localhost:6379

# Authentication - REQUIRED: Generate secure random string
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Payment Processing (Polar.sh) - Get from https://polar.sh
POLAR_ACCESS_TOKEN=
POLAR_WEBHOOK_SECRET=
POLAR_ORGANIZATION_ID=
POLAR_SUCCESS_URL=http://localhost:5173/success?checkout_id={CHECKOUT_ID}

# Product IDs from Polar Dashboard - Replace with actual product IDs
POLAR_POWER_PRODUCT_ID=
POLAR_PRO_PRODUCT_ID=
POLAR_ENTERPRISE_PRODUCT_ID=

# Feature Flags
JINA_FALLBACK_ENABLED=true
MCP_SERVER_ENABLED=true
SEO_PAGES_ENABLED=true
ANALYTICS_ENABLED=true

# Rate Limits
RATE_LIMIT_FREE_DAILY=5
RATE_LIMIT_POWER_DAILY=unlimited
RATE_LIMIT_PRO_DAILY=unlimited

# External APIs
JINA_READER_BASE_URL=https://r.jina.ai

# Development Settings
DEBUG=true
LOG_LEVEL=info
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# MCP Server Settings
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost

# Email Settings (for notifications) - Optional
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@ctxt.help

# Analytics & Monitoring - Optional
SENTRY_DSN=